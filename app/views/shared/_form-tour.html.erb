<%= simple_form_for @tour do |f| %>
  <%= f.input :name, label: 'Tour name', error: "Tour's must have a name!" %>
  <%= f.input :price, label: "Price in Dollars", error: "Tour's must have a price!" %>
  <%= f.input :description, label: "Describe your tour", error: "Tours must have a description!" %>
  <%= f.input :location, label: "Location of your tour", error: "Tours must have a location!" %>
  <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Upload as many files as you want" %>
  <%= f.button :submit %>
<% end %>
