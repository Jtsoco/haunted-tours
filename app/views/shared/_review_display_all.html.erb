<% reviews.order('time DESC').each do |review| %>
  <div class='review' id="bg-image-show"style="margin=8px; padding= 8px; background-image: url('https://images.pexels.com/photos/8892/pexels-photo.jpg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');">
    <h4><%= review.user.first_name %></h4>
    <p>Posted:<%= review.nice_date %></p>
    <p><%= review.comment %></p>
  </div>
<% end %>
