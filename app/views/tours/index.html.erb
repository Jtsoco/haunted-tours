<div class="container">
  <h2 class="index-header">Our most popular tours</h2>
  <div class="cards">
    <% @tours.each do |tour| %>
      <div class="card"id="bg-image"style="background-image: url('https://images.pexels.com/photos/8892/pexels-photo.jpg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');height: 60vh">
        <p id="tombstone-head"><strong><%= tour.name %></strong></p>
        <div id="carouselExampleIndicators<%= tour.id %>" class="carousel slide h-50">
          <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators<%= tour.id %>" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators<%= tour.id %>" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators<%= tour.id %>" data-bs-slide-to="2" aria-label="Slide 3"></button>
          </div>
          <div class="carousel-inner  h-100">
            <% tour.photos.each_with_index do |photo, index| %>
              <div class="favorite-logo" >
                <img src="https://cdn-icons-png.flaticon.com/512/7562/7562403.png" alt="" class="logo-size">
              </div>
              <div class="carousel-item  h-100 my-relative <%= "active" if index == 0 %>">
                <%= cl_image_tag photo.key, class:"d-block w-100 h-100", alt:"..." %>
                <%= link_to '', tour_path(tour), class: "my-overlay" %>
              </div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators<%= tour.id %>" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators<%= tour.id %>" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
        <div class="my-relative">
          <div class="card-info-bottom">
            <p>⚰️ 5.0</p>
            <p><i class="fa-regular fa-building"></i> <%= tour.location %></p>
            <p>$ <%= tour.price %> each</p>
            <%= link_to '', tour_path(tour), class: "my-overlay" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
