<div class='container-fluid'>
  <div class='p-5'>
    <h1><%= @tour.name %></h1>
    <h5>tour review</h5>
  </div>
  <div data-controller="lightbox">
    <% @tour.photos.each do |photo| %>
      <a href="<%= cl_image_path photo.key%>">
        <%= cl_image_tag photo.key, width:400, height:450, crop: :fill %>
      </a>
    <% end %>
  </div>
  <div class='tour-content'>
    <div class='container d-flex justify-content-between w-100 p-4'>
      <div class='mb-3 w-75'>
        <div class='bg-secondary p-3'>
          <h3>Tour hosted by: <%=@tour.user.first_name  %>
          </h3>
          <span>Location: <%=  @tour.location %></span>
        </div>
        <div class='bg-secondary p-3 mt-4 p-3'>
          <h2>Tour description</h2>
          <span><%= @tour.description %></span>
        </div>
      </div>
      <div class='bg-light p-3'>
        <h3>$<%= @tour.price %></h3>
        <div class="dropdown">
          <button class="btn btn-info dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Victims number:
          </button>
          <div>
            <%= render 'bookings/form', tour: @tour, booking: Booking.new %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
